{
  "manifest_version": 2,
  "name": "BlueRaven",
  "version": "1.1",
  "description": "Modern theme for Twitter/X with LLM tweet filtering",
  "browser_specific_settings": {
    "gecko": {
      "id": "blueraven@example.com"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "theme_icons": [{
      "light": "icon.png",
      "dark": "icon.png",
      "size": 32
    }]
  },
  "permissions": [
    "storage",
    "*://twitter.com/*",
    "*://x.com/*",
    "*://api.openai.com/*",
    "*://api.anthropic.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://twitter.com/*",
      "*://x.com/*"
    ],
    "css": ["styles.css"],
    "js": ["config.js", "content.js"]
  }],
  "web_accessible_resources": [
    "styles.css"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
